<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainWeather">


    <ImageView
        android:id="@+id/idSignWeather"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_luancher" />

    <Button
        android:id="@+id/idBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/medium"
        android:hint="Search City"
        android:textColor="@color/whiteT"
        android:textColorHint="@color/whiteT"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/idTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/idSignWeather"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="30 c"
        android:textAlignment="center"
        android:textColor="@color/blackT"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/idLoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/idSignWeather"
        android:layout_marginTop="200dp"
        android:text="Location"
        android:textAlignment="center"
        android:textColor="@color/blackT"
        android:textSize="40sp" />


</RelativeLayout>