<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:background="@drawable/pa">

    <TextView
        android:id="@+id/us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/bold"
        android:gravity="center_horizontal"
        android:text="Developer Informations"
        android:textAlignment="center"
        android:textColor="@color/black_shade_2"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/us"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bold"
        android:gravity="center_horizontal"
        android:text="Anthony Magat"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/desc0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_centerVertical="true"
        android:fontFamily="@font/medium"
        android:text="Programmer"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc0"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bold"
        android:text="Dennis Yares"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/desc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc1"
        android:layout_centerVertical="true"
        android:fontFamily="@font/medium"
        android:text="Technical Writer"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/desc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc2"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bold"
        android:text="Rissadiva Hitgano"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/desc4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc3"
        android:layout_centerVertical="true"
        android:fontFamily="@font/medium"
        android:text="Designer"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/desc5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc4"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bold"
        android:text="Jan Covi Nesperos"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/desc6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc5"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bold"
        android:text="EddieBoy Marcella"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/desc7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc6"
        android:fontFamily="@font/medium"
        android:text="OA Tester"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc7"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/bold"
        android:text="Contact Us"
        android:textAlignment="center"
        android:textColor="@color/black_shade_2"
        android:textSize="30dp"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:id="@+id/idLL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/contact"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idFB"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="30dp"
            android:src="@drawable/fb1"></ImageView>

        <ImageView
            android:id="@+id/idEmail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="32dp"
            android:src="@drawable/g1"></ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/idAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idLL"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:text="About"
        android:textAlignment="center"
        android:textColor="@color/black_shade_2"
        android:textSize="25dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/idus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idAbout"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/medium"
        android:text="Trusted and reliable, with Scoop UP!\nSee the latest news updates around the world."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />



</RelativeLayout>